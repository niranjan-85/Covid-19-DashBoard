<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!-- Navbar -->
    <header class="header box">
        <div class="container-fluid">
            <nav class="inner clearfix">
                <div class="logo">
                    <img src="/images/logo.png" alt="" id="logo-img">
                </div>
                <!-- nav dropdown button -->
                <input type="button" value="Explore" id="explore-btn">
                <div class="menu">
                    <ul class="menu-list mt-3">
                        <li class="nav-item">
                            <a class="nav-link active mx-4 links" aria-current="page" href="/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active mx-4 links" aria-current="page" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active mx-4 links" aria-current="page" href="/register">Register</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Login/Register Section -->
    <div class="container login-section">
        <div class="row">
            <div class="col-lg">
                <div class="container-fluid login d-flex flex-column justify-content-center mt-5 mx-auto">
                    <h4 class="mb-4">Login</h4>
                    <div class="error mb-2">
                        <div class="alert alert-danger" role="alert">
                            <span id="error-msg"></span>
                        </div>
                    </div>
                    <form action="/welcome" method="GET" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="username" class="mb-2">Username <p class="text-danger d-inline">*</p></label>
                            <input class="form-control" name="username" type="text" id="username">
                        </div>
                        <div class="form-group mb-3">
                            <label for="lname" class="mb-2">Password <p class="text-danger d-inline">*</p></label>
                            <input class="form-control" type="password" name="password" id="password">
                        </div>
                        <button type="submit" id="submit" class="primary-button">
                            <p class="d-inline">Login</p> 
                            <img src="/images/arrow.png" alt="" class="arrow"></button>
                    </form>
                </div>
            </div>
            <div class="col text-center">
                <img src="/images/log.png" alt="" class="login-logo">
            </div>
        </div>
    </div>

    <script src="/js/navbar.js"></script>
    <script src="/js/loginvalidate.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
</body>
</html>